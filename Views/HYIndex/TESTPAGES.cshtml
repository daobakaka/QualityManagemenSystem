                failureSituationText = failureLabels.map((label, i) => `${label}${failureSituationContents[i] || "default"}`).join("\n");
                break;
        }

        // 添加文本框
        slide.addText("问题描述", {
            x: 0,
            y: yPos,
            w: sectionWidth,
            h: problemDescHeight,
            fontSize: 18,
            color: "000000",
            align: "center",
            fill: { color: "#ADD8E6" }
        });
        slide.addText("失效情况", {
            x: sectionWidth,
