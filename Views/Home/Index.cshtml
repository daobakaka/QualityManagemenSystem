@{
    ViewData["Title"] = "Home Page";
}

<style>
    .header-image {
        height: 50%; /* 图片占屏幕的一半 */
    }

    .login-container {
        height: 50%; /* 登录框占屏幕的一半 */
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0.8);
        position: relative;
        z-index: 1; /* 确保登录框显示在其他内容之上 */
    }

    /* 加载覆盖层样式 */
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #ffffff; /* 白色背景 */
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999; /* 确保覆盖在最上层 */
    }

    /* 简单的加载动画 */
    .spinner {
        border: 8px solid #f3f3f3; /* Light grey */
        border-top: 8px solid #3498db; /* Blue */
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
    }

</style>

<body>
    <!-- 加载覆盖层 -->
    <div id="loadingOverlay" class="loading-overlay">
        <div class="spinner"></div>
    </div>

    <!-- 主内容 -->
    <div class="header-image">
        <img src="~/pictures/1.jpg" alt="描述信息" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>

    <div class="login-container">
        <div class="text-center">
            <h1 class="display-4" style="margin-top: 3vh;">上汽红岩质量信息系统</h1>
            <form asp-controller="Home" asp-action="Login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" style="margin-top: 2vh;" placeholder="用户名" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" style="margin-top: 2vh;" placeholder="密码" required />
                </div>
                <button type="submit" class="btn btn-outline-secondary mb-2" style="margin-top: 2vh;">登录</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <script>
            // 当页面完全加载后，隐藏加载覆盖层
            window.addEventListener('load', function() {
                var loadingOverlay = document.getElementById('loadingOverlay');
                if (loadingOverlay) {
                    loadingOverlay.style.display = 'none';
                }
            });
        </script>
    }
</body>
